-- 99 Nights in the Forest: Skibidi Teach V2 (Combat Update)
local ScreenGui = Instance.new("ScreenGui")
local Main = Instance.new("ScrollingFrame")
local Title = Instance.new("TextLabel")
local Layout = Instance.new("UIListLayout")

-- UI Setup
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
Main.Name = "SkibidiMenuV2"
Main.Parent = ScreenGui
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 30)
Main.Size = UDim2.new(0, 350, 0, 450)
Main.Position = UDim2.new(0.5, -175, 0.5, -225)
Main.CanvasSize = UDim2.new(0, 0, 2.5, 0)
Main.Active = true
Main.Draggable = true

Title.Parent = Main
Title.Text = "SKIBIDI TEACH V2 + KILL AURA"
Title.Size = UDim2.new(1, 0, 0, 45)
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

Layout.Parent = Main
Layout.Padding = UDim.new(0, 5)

-- Helper to make buttons
local function MakeButton(txt, color, callback)
    local btn = Instance.new("TextButton")
    btn.Parent = Main
    btn.Text = txt
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSansBold
    btn.MouseButton1Click:Connect(callback)
    return btn
end

