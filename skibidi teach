-- Brainrot Stealer v4.2 (Fixed Steal + 5s Boomerang)
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local StatusLabel = Instance.new("TextLabel")
local SetBaseBtn = Instance.new("TextButton")
local BoomerangBtn = Instance.new("TextButton")

local BaseLocation = nil
local TargetLocation = nil

-- UI Setup
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 0, 0) -- Deep Red
MainFrame.Size = UDim2.new(0, 300, 0, 220)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -110)
MainFrame.Active = true
MainFrame.Draggable = true

Title.Parent = MainFrame
Title.Text = "BRAINROT STEALER V4.2"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold

StatusLabel.Parent = MainFrame
StatusLabel.Text = "Ready to Steal"
StatusLabel.Position = UDim2.new(0, 0, 0.8, 0)
StatusLabel.Size = UDim2.new(1, 0, 0, 30)
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Button: Set Base
SetBaseBtn.Parent = MainFrame
SetBaseBtn.Text = "1. SET BASE"
SetBaseBtn.Size = UDim2.new(0.8, 0, 0, 40)
SetBaseBtn.Position = UDim2.new(0.1, 0, 0.25, 0)
SetBaseBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

-- Button: Steal & Boomerang
BoomerangBtn.Parent = MainFrame
BoomerangBtn.Text = "2. START STEAL CYCLE"
BoomerangBtn.Size = UDim2.new(0.8, 0, 0, 40)
BoomerangBtn.Position = UDim2.new(0.1, 0, 0.55, 0)
BoomerangBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)

-- Functionality
SetBaseBtn.MouseButton1Click:Connect(function()
    BaseLocation = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
    StatusLabel.Text = "Base Saved!"
    StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
end)

BoomerangBtn.MouseButton1Click:Connect(function()
    if not BaseLocation then
        StatusLabel.Text = "ERROR: Set Base first!"
        return
    end

    local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart
    
    -- STEP 1: Save the target spot and wait a second to make sure you grabbed it
    StatusLabel.Text = "Grabbing Brainrot..."
    TargetLocation = hrp.CFrame
    task.wait(1.2) -- This gives the game time to "give" you the item
    
    -- STEP 2: Zip to Base to deposit
    StatusLabel.Text = "Zipping to Base..."
    hrp.CFrame = BaseLocation
    
    -- STEP 3: Wait 5 seconds at base
    for i = 5, 1, -1 do
        StatusLabel.Text = "Depositing... " .. i .. "s"
        task.wait(1)
    end
    
    -- STEP 4: Zip back to the target to get more
    StatusLabel.Text = "Zipping back to Target..."
    hrp.CFrame = TargetLocation
    StatusLabel.Text = "Cycle Complete!"
end)
