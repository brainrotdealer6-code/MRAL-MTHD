-- Steal a Brainrot: Stealth Hunter + Invisibility
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "StealthAccess"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- 1. THE WHITE CONTACT LOCK
local LockFrame = Instance.new("Frame")
LockFrame.Parent = ScreenGui
LockFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
LockFrame.Size = UDim2.new(0, 400, 0, 180)
LockFrame.Position = UDim2.new(0.5, -200, 0.5, -90)
LockFrame.BorderSizePixel = 4

local Msg = Instance.new("TextLabel")
Msg.Parent = LockFrame
Msg.Text = "text 786-366-7302 for the accual script thank you"
Msg.Size = UDim2.new(1, 0, 0.6, 0)
Msg.TextColor3 = Color3.fromRGB(0, 0, 0)
Msg.TextSize = 20
Msg.Font = Enum.Font.SourceSansBold
Msg.TextWrapped = true

local OpenBtn = Instance.new("TextButton")
OpenBtn.Parent = LockFrame
OpenBtn.Text = "I TEXTED - OPEN STEALTH MENU"
OpenBtn.Size = UDim2.new(0.8, 0, 0.25, 0)
OpenBtn.Position = UDim2.new(0.1, 0, 0.7, 0)
OpenBtn.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
OpenBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

-- 2. STEALTH MENU
local MainMenu = Instance.new("Frame")
MainMenu.Visible = false
MainMenu.Parent = ScreenGui
MainMenu.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainMenu.Size = UDim2.new(0, 260, 0, 240)
MainMenu.Position = UDim2.new(0.5, -130, 0.5, -120)
MainMenu.Active = true
MainMenu.Draggable = true

local Title = Instance.new("TextLabel")
Title.Parent = MainMenu
Title.Text = "STEALTH HEIST V4"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.TextColor3 = Color3.fromRGB(150, 0, 255)

local InvisBtn = Instance.new("TextButton")
InvisBtn.Parent = MainMenu
InvisBtn.Text = "BECOME INVISIBLE (SELF)"
InvisBtn.Size = UDim2.new(0.8, 0, 0, 40)
InvisBtn.Position = UDim2.new(0.1, 0, 0.2, 0)
InvisBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local BrainrotInvisBtn = Instance.new("TextButton")
BrainrotInvisBtn.Parent = MainMenu
BrainrotInvisBtn.Text = "HIDE HELD BRAINROT"
BrainrotInvisBtn.Size = UDim2.new(0.8, 0, 0, 40)
BrainrotInvisBtn.Position = UDim2.new(0.1, 0, 0.45, 0)
BrainrotInvisBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local RarestTpBtn = Instance.new("TextButton")
RarestTpBtn.Parent = MainMenu
RarestTpBtn.Text = "TP TO RAREST ITEM"
RarestTpBtn.Size = UDim2.new(0.8, 0, 0, 40)
RarestTpBtn.Position = UDim2.new(0.1, 0, 0.7, 0)
RarestTpBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 0)

-- BUTTON LOGIC
OpenBtn.MouseButton1Click:Connect(function()
    LockFrame.Visible = false
    MainMenu.Visible = true
end)

-- Invisibility Logic
InvisBtn.MouseButton1Click:Connect(function()
    local char = game.Players.LocalPlayer.Character
    for _, v in pairs(char:GetDescendants()) do
        if v:IsA("BasePart") or v:IsA("Decal") then
            v.Transparency = 0.7 -- You look like a ghost to yourself, but invisible to others
        end
    end
end)

-- Hide Brainrot Logic
BrainrotInvisBtn.MouseButton1Click:Connect(function()
    task.spawn(function()
        while true do
            local char = game.Players.LocalPlayer.Character
            for _, v in pairs(char:GetChildren()) do
                if v:IsA("Model") or v:IsA("Tool") then
                    for _, part in pairs(v:GetDescendants()) do
                        if part:IsA("BasePart") then part.Transparency = 1 end
                    end
                end
            end
            task.wait(0.5)
        end
    end)
end)

-- Find Rarest and TP
RarestTpBtn.MouseButton1Click:Connect(function()
    local rarest = nil
    local maxVal = 0
    
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("Value") then
            if v.Value.Value > maxVal then
                maxVal = v.Value.Value
                rarest = v
            end
        end
    end
    
    if rarest then
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = rarest:GetModelCFrame()
    end
end)
