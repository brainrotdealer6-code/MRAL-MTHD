-- Brainrot Stealer v4.1 (5s Boomerang)
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local StatusLabel = Instance.new("TextLabel")
local SetBaseBtn = Instance.new("TextButton")
local BoomerangBtn = Instance.new("TextButton")

local BaseLocation = nil
local TargetLocation = nil

-- UI Setup
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 20, 30) -- Deep Blue
MainFrame.Size = UDim2.new(0, 300, 0, 220)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -110)
MainFrame.Active = true
MainFrame.Draggable = true

Title.Parent = MainFrame
Title.Text = "BOOMERANG V4.1 (5s)"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.TextColor3 = Color3.fromRGB(0, 255, 255)
Title.Font = Enum.Font.SourceSansBold

StatusLabel.Parent = MainFrame
StatusLabel.Text = "1. Set Base | 2. Go to Target"
StatusLabel.Position = UDim2.new(0, 0, 0.8, 0)
StatusLabel.Size = UDim2.new(1, 0, 0, 30)
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Button: Set Base
SetBaseBtn.Parent = MainFrame
SetBaseBtn.Text = "SET BASE LOCATION"
SetBaseBtn.Size = UDim2.new(0.8, 0, 0, 40)
SetBaseBtn.Position = UDim2.new(0.1, 0, 0.25, 0)
SetBaseBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- Button: Boomerang (5s Delay)
BoomerangBtn.Parent = MainFrame
BoomerangBtn.Text = "STEAL & ZIP (5s WAIT)"
BoomerangBtn.Size = UDim2.new(0.8, 0, 0, 40)
BoomerangBtn.Position = UDim2.new(0.1, 0, 0.55, 0)
BoomerangBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 200)

-- Functionality
SetBaseBtn.MouseButton1Click:Connect(function()
    BaseLocation = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
    StatusLabel.Text = "Base Saved! Now go to target."
    StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
end)

BoomerangBtn.MouseButton1Click:Connect(function()
    if not BaseLocation then
        StatusLabel.Text = "ERROR: Set Base first!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
        return
    end

    local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart
    
    -- 1. Save where you are right now (The Steal Spot)
    TargetLocation = hrp.CFrame
    
    -- 2. Teleport to Base
    StatusLabel.Text = "Zipping to Base..."
    hrp.CFrame = BaseLocation
    
    -- 3. Wait 5 seconds (Updated Delay)
    for i = 5, 1, -1 do
        StatusLabel.Text = "Returning in " .. i .. "s..."
        task.wait(1)
    end
    
    -- 4. Teleport back to Target
    hrp.CFrame = TargetLocation
    StatusLabel.Text = "Back at Target! Steal again."
    StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
end)
